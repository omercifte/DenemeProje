@model List<DenemeProje.Models.Customer>;

<table class="table">
    <thead>
        <tr>
            
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Age</th>
            <th scope="col">Mail</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>@item.Mail</td>
                <td><button type="button" onclick="deleteCustomers(@item.Id)" class="btn btn-primary btn-sm">Sil</button></td>
            </tr>
        }

    </tbody>
</table>

<script>
    async function deleteCustomers(id) {

        const response = await fetch(`/home/deletecustomer/${id}`,
            { method: 'DELETE' });
        if (response.ok) {
            location.reload();
        }
    }

</script>

